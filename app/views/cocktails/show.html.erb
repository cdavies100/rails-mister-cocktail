<h1><%= @cocktail.name %></h1>

<%= cl_image_tag @cocktail.photo? ? @cocktail.photo : "pexels-photo-109275_ockuej", height: 300, width: 400, crop: :fill, class: 'show-cocktail' %>

<div class="cocktail">
  <div class="ingredients">
    <% @cocktail.doses.each do |dose| %>
      <p>
        <%= dose.description %> <strong><%= dose.ingredient.name %></strong>
        <%= link_to dose_path(dose), method: :delete do %>
          <i class="fa fa-trash"></i>
        <% end %>
      </p>
    <% end %>
  </div>

  <%= link_to 'Add dose', new_cocktail_dose_path(@cocktail), class: 'btn' %>
  <%= link_to 'Back', cocktails_path, class: 'btn' %>
</div>
