<h1><%= @cocktail.name %></h1>
<% @cocktail.doses.each do |dose| %>
  <p><%= dose.description %></p>
  <h5><%= dose.ingredient.name %></h5>
  <%= link_to 'delete dose', dose_path(dose), method: :delete %>
<% end %>
<%= link_to 'Add dose', new_cocktail_dose_path(@cocktail) %>
<%= link_to 'Back', cocktails_path, class: 'btn' %>
